<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <div class="mb-3">
        並び替え:
        <%= link_to "新着順", books_path(sort: "new"), class: "btn btn-outline-primary btn-sm" %> | 
        <%= link_to "評価順", books_path(sort: "star"), class: "btn btn-outline-primary btn-sm" %>
      </div>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>